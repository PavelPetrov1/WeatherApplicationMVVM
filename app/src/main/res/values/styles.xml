<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RailRoadItemTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/text_view_rail_road_item_margin</item>
    </style>

    <style name="RailRoadItemTextViewNoIconStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BarrierMessageItemStatusStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_view_rail_road_message_item_headline_text_size
        </item>
    </style>

    <style name="BarrierMessageItemTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/image_view_rail_road_item_margin</item>
        <item name="android:textSize">@dimen/text_view_rail_road_message_item_subtext_text_size
        </item>
    </style>

</resources>